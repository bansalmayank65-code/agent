# Super Simple Dockerfile - Most Reliable
# Uses standard Eclipse Temurin images with pre-built Flutter files

FROM eclipse-temurin:17-jdk

# Set working directory
WORKDIR /app

# Copy the entire project
COPY . .

# Build only the Java application (Flutter is pre-built)
RUN cd backend && \
    chmod +x mvnw && \
    ./mvnw clean package -DskipTests

# Runtime stage
FROM eclipse-temurin:17-jre

# Install wget for health checks
RUN apt-get update && apt-get install -y wget && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the JAR file
COPY --from=0 /app/backend/target/agenticworkstation-0.0.1-SNAPSHOT.jar app.jar

# Create non-root user
RUN groupadd -g 1001 appuser && useradd -r -u 1001 -g appuser appuser
RUN chown appuser:appuser app.jar

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1

# Set JVM options
ENV JAVA_OPTS="-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:+UseG1GC"

# Start the application
CMD ["sh", "-c", "java $JAVA_OPTS -Dserver.port=${PORT:-8080} -jar app.jar"]