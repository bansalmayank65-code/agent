# Ultra Simple Dockerfile - Direct backend copy
FROM eclipse-temurin:17-jdk

# Install Maven as backup
RUN apt-get update && apt-get install -y maven && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy backend directory specifically (this includes static files if they exist)
COPY backend/ ./backend/

# Build the application
WORKDIR /app/backend
RUN echo "=== Current directory contents ===" && \
    pwd && \
    ls -la && \
    echo "=== Checking for mvnw ===" && \
    ls -la mvn* 2>/dev/null || echo "No mvn files found" && \
    echo "=== Building with Maven ===" && \
    mvn clean package -DskipTests

# Runtime stage
FROM eclipse-temurin:17-jre

# Install wget for health checks
RUN apt-get update && apt-get install -y wget && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the JAR file
COPY --from=0 /app/backend/target/agenticworkstation-0.0.1-SNAPSHOT.jar app.jar

# Create non-root user
RUN groupadd -g 1001 appuser && useradd -r -u 1001 -g appuser appuser
RUN chown appuser:appuser app.jar

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1

# Set JVM options
ENV JAVA_OPTS="-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:+UseG1GC"

# Start the application
CMD ["sh", "-c", "java $JAVA_OPTS -Dserver.port=${PORT:-8080} -jar app.jar"]